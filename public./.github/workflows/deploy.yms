name: Scrape & Deploy to Surge

on:
  schedule:
    - cron: "0 */6 * * *"   # every 6 hours
  workflow_dispatch:        # allow manual run from the Actions tab
  push:
    branches: [ main ]      # also run on pushes

jobs:
  build-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: '20'

      - name: Install deps (Playwright + Chromium)
        run: |
          npm ci
          npx playwright install --with-deps chromium

      - name: Scrape DMH
        run: npm run scrape

      - name: List output
        run: ls -la public && head -n 25 public/dmh-events.json || true

      - name: Install Surge
        run: npm i -g surge

      - name: Deploy to Surge
        env:
          SURGE_LOGIN: ${{ secrets.SURGE_LOGIN }}
          SURGE_TOKEN: ${{ secrets.SURGE_TOKEN }}
        run: |
          # change this to your exact domain
          DOMAIN="your-domain.surge.sh"
          surge ./public $DOMAIN --token $SURGE_TOKEN --project ./public
